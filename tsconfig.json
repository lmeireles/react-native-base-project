{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017"],
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,

    "strict": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "rootDirs": [".", "src"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
